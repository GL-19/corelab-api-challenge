{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"lib": ["es6"],
		"allowJs": true,
		"outDir": "build",
		"rootDir": "./",
		"baseUrl": "./src",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	}
}
